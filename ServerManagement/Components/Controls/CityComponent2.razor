<div class="col">
    <div
        class="card @(selectedCity.Equals(city, StringComparison.OrdinalIgnoreCase) ? "border-primary" : "") ">
        <img src="@($"/images/{city}.png")"
             class="card-img-top"
             alt="...">
        <div class="card-body">
            <button type="button"
                    class="btn btn-primary"
                    value="@city"
                    @onclick="() => { GetServersByCity(city); }">
                @city
            </button>
        </div>
    </div>
</div>


@code {
    [ Parameter ]public string city { get; set; } = String.Empty;
    private string? selectedCity { get; set; } = "Toronto";

    private void GetServersByCity(string cityClicked)
    {
        selectedCity = cityClicked;
    }


}
