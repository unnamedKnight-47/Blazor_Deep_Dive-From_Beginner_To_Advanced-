<h3>SearchComponent</h3>

<br>
<div class="input-group">
    <input class="form-control" @bind-value="_serverFilter"
           @bind-value:event="oninput"/>
    <button type="button" class="btn btn-secondary"
            @onclick="HandleSearch">
        Search
    </button>
</div>
<br>

@code {
    [ Parameter ]public string _serverFilter { get; set; }

    [ Parameter ]public EventCallback<string> HandleSearchFilter { get; set; }

    private void HandleSearch()
    {
        HandleSearchFilter.InvokeAsync(_serverFilter);
    }

}
